{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "paths": {
      "$components": ["src/components"],
      "$components/*": ["src/components/*"],
      "$context": ["src/context"],
      "$context/*": ["src/context/*"],
      "$lib": ["src/lib"],
      "$lib/*": ["src/lib/*"],
      "$routes": ["src/routes"],
      "$routes/*": ["src/routes/*"]
    }
  }
}
